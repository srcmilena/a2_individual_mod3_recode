<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link rel="icon" href="https://img.icons8.com/external-vitaliy-gorbachev-lineal-vitaly-gorbachev/60/ffffff/external-airplane-airport-vitaliy-gorbachev-lineal-vitaly-gorbachev-2.png" />
</head>
<body>
        <header>
            <nav class="navbar navBar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">

                <img src="https://img.icons8.com/external-vitaliy-gorbachev-fill-vitaly-gorbachev/60/000000/external-airplane-airport-vitaliy-gorbachev-fill-vitaly-gorbachev-2.png" alt="" width="50" class="logo" />

                <div class="container">

                    <a class="navbar-brand navA" asp-area="" asp-controller="" asp-action=""></a> <!--Recogency-->

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                        <ul class="navbar-nav flex-grow-1 navUl">

                            <li class="nav-item">
                                <a class="nav-link text-dark nav-Item" asp-area="Index" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark nav-Item" asp-area="" asp-controller="Home" asp-action="Destinos">Destinos</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark nav-Item" asp-area="" asp-controller="Home" asp-action="Promocoes">Promoções</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark nav-Item" asp-area="" asp-controller="AtendimentoContato" asp-action="Create">Contato</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark nav-Item" asp-area="" asp-controller="Pessoas" asp-action="Create">Cadastro</a>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" >
            &copy; 2021 - <a class="botao" asp-area="" asp-controller="" asp-action="">Recogency</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
